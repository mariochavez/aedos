<!DOCTYPE html>
<html>
<head>
  <title>AETO Panel</title>
  <%= stylesheet_link_tag 'style' %>
  <%= javascript_include_tag :defaults %>
  <%= include_tiny_mce_if_needed %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="page">
			
		<div id="header">
			
			<div id="title">
				<h1>AETO Panel</h1>
			</div><!--end title-->
			
			<div id="menu">
				<ul>
					<li><%= link_to 'Hoteles', hotels_path %></li>
					<li><%= link_to 'Destinos', destinations_path %></li>
					<li><%= link_to 'Pruebas', searches_path %></li>
				</ul>
			</div><!--end menu-->
			
			<div id="logout">
				<p>
				<% if user_signed_in? %>  
				    Signed in as <%= link_to current_user.email, edit_user_registration_path %>. Not you?   
				    <%= link_to "Sign out", destroy_user_session_path %>  
				  <% else %>  
				    <%= link_to "Sign up", new_user_registration_path %> or   
				    <%= link_to "Sign in", new_user_session_path %>  
				  <% end %>
				</p>
			</div><!--end logout-->
			
			<div id="messages">
				<p class="notice"><%= notice %></p>
				<p class="alert"><%= alert %></p>
			</div><!--end messages-->
			
		</div><!--end header-->
			
		<%= yield %>			
		
		<div id="footer"></div><!--end footer-->


    </div><!--end page-->

</body>
</html>
